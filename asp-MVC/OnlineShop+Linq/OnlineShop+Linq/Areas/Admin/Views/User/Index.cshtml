@model PagedList.IPagedList<Model.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "User Manager";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Header{
    Users Index
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                User List
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "User", FormMethod.Get, new { @class = "form-group" }))
                {
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="input-group">
                                <input type="text" class="form-control" name="searchString" value="@ViewBag.SearchString">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="Submit">Search</button>
                                </span>
                            </div><!-- /input-group -->
                        </div><!-- /.col-lg-6 -->
                    </div><!-- /.row -->
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th></th>
                                <th>User Name</th>
                                <th>Name</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>
                                        <a href="/Admin/User/Edit/@item.ID">Edit</a>
                                        |
                                        @Ajax.ActionLink("Delete", "Delete",
                                        new { @id = item.ID },
                                        new AjaxOptions
                                        {
                                            Confirm = "Are you sure you want to Delete "+item.UserName+" ?",
                                            OnComplete = "$('#row_"+@item.ID+"').remove()",
                                            HttpMethod = "DELETE"
                                        })
                                    </td>
                                    <td>@item.UserName</td>
                                    <td>@item.Name</td>
                                    <td>@item.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index",
                    new { page, @searchString = ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
<!-- /.row -->

<div>
    @Html.ActionLink("Go to Add User", "Create")
</div>