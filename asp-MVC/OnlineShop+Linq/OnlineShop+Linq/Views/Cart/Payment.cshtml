@model List<OnlineShop_Linq.Models.CartItem>

@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="content">
    <div class="section group">

        @* Table *@
        @if (Model.Count > 0)
        {
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <td>Product ID</td>
                            <td>Name</td>
                            <td>Image</td>
                            <td>Quantity</td>
                            <td>Price</td>
                            <td>Total</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="cart-td">
                                <td>@item.Product.Code</td>
                                <td>@item.Product.Name</td>
                                <td><img src="@item.Product.Image" width="100" /></td>
                                <td>@item.Quantity</td>
                                <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                                <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
                @{
                    decimal sum = 0;
                    foreach (var item in Model)
                    {
                        sum += item.Product.Price.GetValueOrDefault(0) * item.Quantity;
                    }
                    <hr class="thick">
                    <label>Total : @sum.ToString("N0")</label>
                }
            </div>
        }

        @* Form *@
        <div class="col-md-4">
            <div class="form-group">
                <h2>Place Your Order</h2>
            </div>
            @using (Html.BeginForm("Payment", "Cart", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Recipient</label>
                    <input name="shipName" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    <input name="mobile" type="number" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input name="address" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input name="email" type="email" class="form-control" />
                </div>
                <button type="submit" class="btn btn-theme"> Place Order </button>
            }
        </div>
    </div>
</div>

